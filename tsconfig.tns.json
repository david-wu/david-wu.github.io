{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "@src/*": [
        "src/*.tns.ts",
        "src/*.ts"
      ]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": [
    "src/main.tns.ts"
  ]
}
